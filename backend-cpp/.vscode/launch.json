{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build and Run Backend",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/backend",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build-backend",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "console": "integratedTerminal"
        }
    ]
}
