{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-backend",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-S",
                "${workspaceFolder}",
                "-B",
                "${workspaceFolder}/build"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": ["make-backend"]
        },
        {
            "label": "make-backend",
            "type": "shell",
            "command": "make",
            "args": [
                "-C",
                "${workspaceFolder}/build",
                "-j"
            ],
            "problemMatcher": ["$gcc"]
        }
    ]
}
